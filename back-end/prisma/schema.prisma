generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   Int                 @id @default(autoincrement())
  email                String              @unique
  name                 String?
  password             String
  created_at           DateTime            @default(now())
  updated_at           DateTime            @updatedAt
  phone                String?
  warnings_preferences String
  role                 String              @default("user")
  warning_logs_sent    Warning_logs_sent[]
}

model Warnings {
  id                Int                 @id @default(autoincrement())
  name              String              @default("")
  status            String
  message           String
  channel           String              @default("")
  created_at        DateTime            @default(now())
  warning_logs_sent Warning_logs_sent[]
}

model Warning_logs_sent {
  id         Int      @id @default(autoincrement())
  warningId  Int
  user_id    Int
  sent_at    DateTime @default(now())
  channel    String
  created_at DateTime @default(now())
  user       User     @relation(fields: [user_id], references: [id])
  warning    Warnings @relation(fields: [warningId], references: [id])
}

model Recipient {
  id         Int      @id @default(autoincrement())
  name       String?
  email      String    @unique
  phone      String?   @unique
  preferences String?
  created_at DateTime @default(now())
}

model Templates_email {
  id    Int     @id @default(autoincrement())
  name  String
  body  String
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}